{
  "name": "todo-vue",
  "version": "0.1.0",
  "private": true,
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "scripts": {
    "serve": "npm run lint && vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "clean:dist": "rimraf dist",
    "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'"
  },
  "dependencies": {
    "core-js": "^3.10.0",
    "firebase": "^7.11.0",
    "normalize.css": "^8.0.1",
    "register-service-worker": "^1.7.0",
    "vue": "^2.6.11",
    "vue-i18n": "^8.24.2",
    "vue-router": "^3.5.1",
    "vuex": "^3.6.2",
    "vuex-persistedstate": "^2.7.1"
  },
  "devDependencies": {
    "@intlify/vue-i18n-loader": "^1.1.0",
    "@vue/cli-plugin-babel": "^4.5.12",
    "@vue/cli-plugin-eslint": "^4.5.12",
    "@vue/cli-plugin-pwa": "^4.5.12",
    "@vue/cli-service": "^4.5.12",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "@vue/eslint-config-prettier": "^6.0.0",
    "babel-eslint": "^10.1.0",
    "commit-message-validator": "^1.0.0",
    "eslint": "^7.23.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-sonarjs": "^0.6.0",
    "eslint-plugin-vue": "^7.8.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "node-sass": "^4.14.1",
    "prettier": "^2.2.1",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.12.0",
    "stylelint-config-recess-order": "^2.0.4",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-scss": "^3.19.0",
    "vue-cli-plugin-i18n": "^2.0.3",
    "vue-template-compiler": "^2.6.11"
  },
  "config": {
    "commit-message-validator": {
      "pattern": "^TV (build|ci|chore|docs|feat|fix|perf|refactor|revert|style|test) ?\\((\\*|.{1,20})\\): ",
      "errorMessage": "Commit message does not satisfy the requirements"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commit-message-validator",
      "pre-push": "npm run build && npm run lint"
    }
  },
  "lint-staged": {
    "*.{js,json,md,scss,vue}": "prettier --write",
    "*.{js,vue}": "npm run lint"
  }
}
