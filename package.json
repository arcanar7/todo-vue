{
  "name": "todo-vue",
  "version": "1.0.0",
  "private": true,
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "scripts": {
    "serve": "npm run lint && vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "clean:dist": "rimraf dist",
    "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'"
  },
  "dependencies": {
    "core-js": "^3.22.2",
    "firebase": "^9.6.11",
    "normalize.css": "^8.0.1",
    "register-service-worker": "^1.7.2",
    "vue": "^3.2.33",
    "vue-i18n": "^9.1.9",
    "vue-router": "^4.0.14",
    "vuex": "^4.0.2",
    "vuex-persistedstate": "^4.1.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.17",
    "@vue/cli-plugin-eslint": "^4.5.17",
    "@vue/cli-plugin-pwa": "^4.5.17",
    "@vue/cli-service": "^4.5.17",
    "@vue/compiler-sfc": "^3.2.33",
    "@vue/eslint-config-airbnb": "^5.3.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "babel-eslint": "^10.1.0",
    "commit-message-validator": "^1.0.2",
    "eslint": "^7.32.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.10.0",
    "eslint-plugin-vue": "^7.20.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "node-sass": "^7.0.0",
    "prettier": "^2.6.2",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-recess-order": "^2.6.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.21.0"
  },
  "config": {
    "commit-message-validator": {
      "pattern": "^TV (build|ci|chore|docs|feat|fix|perf|refactor|revert|style|test) ?\\((\\*|.{1,20})\\): ",
      "errorMessage": "Commit message does not satisfy the requirements"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commit-message-validator",
      "pre-push": "npm run build && npm run lint"
    }
  },
  "lint-staged": {
    "*.{js,json,md,scss,vue}": "prettier --write",
    "*.{js,vue}": "npm run lint"
  }
}
